title = {{ TARDIS. I. A Constrained Reconstruction Approach to Modeling the z ∼ 2.5 Cosmic Web Probed by Ly $\alpha$ Forest Tomography }},
url = {http://arxiv.org/abs/1903.09049 http://dx.doi.org/10.3847/1538-4357/ab4d4c},
