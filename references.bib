author = {Sousbie, Thierry},
doi = {10.1111/j.1365-2966.2011.18394.x},
eprint = {1009.4015},
issn = {00358711},
journal = {Mon. Not. R. Astron. Soc.},
keywords = {Cosmology: observations,Galaxies: formation,Galaxies: kinematics and dynamics,Large-scale structure of Universe,Methods: data analysis,Methods: numerical},
mendeley-groups = {Astrophysics},
month = {sep},
number = {1},
pages = {350--383},
title = {{The persistent cosmic web and its filamentary structure - I. Theory and implementation}},
