doi = {10.1016/j.ascom.2015.09.003},
eprint = {1504.00362},
issn = {22131337},
journal = {Astron. Comput.},
keywords = {Data access methods,Data management systems,Galaxies: evolution,Galaxies: formation,Methods: data analysis,Methods: numerical},
