arxivId = {0906.1654},
author = {Zhang, Youcai and Yang, Xiaohu and Faltenbacher, Andreas and Springel, Volker and Lin, Weipeng and Wang, Huiyuan},
doi = {10.1088/0004-637X/706/1/747},
eprint = {0906.1654},
